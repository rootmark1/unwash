{%- assign _product = product.selected_or_first_available_variant -%}
{%- assign selected_variant_title = _product.title -%}

<div class="product-primary">
  <div class="shell">
    <div class="product__inner">
      <div class="product__media">
        <div class="product__image">
          <div class="slider-pdp">
            <div class="slider__clip">
              <div class="js-slides">
                {%- for image in product.media -%}
                  <div class="slide">
                    <img src="{{ image | img_url: '600x' }}" alt="{{ image.alt }}" />
                  </div><!-- /.slide -->
                {%- endfor -%}
              </div><!-- /.js-slides -->
            </div><!-- /.slider__clip -->
          </div><!-- /.slider -->
        </div><!-- /.product__image -->
        
        <div class="product__thumbs">
          <div class="slider-thumbs">
            <div class="slider__clip">
              <div class="js-thumbs">
                {%- for image in product.media -%}
                  <div class="slide">
                    <div class="slide__image" style="background-image: url({{ image | img_url: '200x' }});" role="img" aria-label="{{ image.alt }}"></div><!-- /.slide__image -->
                  </div><!-- /.slide -->
                {%- endfor -%}
              </div><!-- /.js-thumbs -->
            </div><!-- /.slider__clip -->
          </div><!-- /.slider-thumbs -->
        </div><!-- /.product__thumbs -->
      </div><!-- /.product__media -->
      
      <div class="product__body">
        <header class="product__head">
          <h3 class="product__vendor">
            {{ product.vendor }}
          </h3><!-- /.product__vendor -->
          
          <h2 class="product__title">
            {{ product.title }}
          </h2><!-- /.product__title -->
          
          <div class="product__rating">
              <a href="#reviews">
                <span class="stamped-product-reviews-badge stamped-main-badge" data-id="{{ product.id }}" data-product-sku="{{ product.handle }}" data-product-type="{{product.type}}" data-product-title="{{product.title}}" style="display: inline-block;">{{ product.metafields.stamped.badge }}</span>
              </a>
          </div><!-- /.product__rating -->
          
          <h4 class="product__price">
            {{ _product.price | money }}
          </h4><!-- /.product__price -->
        </header><!-- /.product__head -->
        
        <div class="product__content">
          {{ product.content }}
        </div><!-- /.product__content -->
        
        <div class="product__form">
          {% form 'product', product, class: "form-product-alt ProductForm" %}
            <div class="form__body">
              {%- for option in product.options_with_values -%}
                {%- assign option_handle = option.name | handle -%}

                <div class="form__row js-custom-variant">
                  <label for="field-{{ option_handle }}" class="form__label">{{ option.name }}:</label>

                  <div class="form__controls form__controls--select">
                    <ul class="list-radios">
                      {%- for value in option.values -%}
                        <li>
                          <div class="radio">
                            <input type="radio" name="radio-{{ option_handle }}" id="field-{{ value }}" {% if value == selected_variant_title %}checked{% endif %} class="js-radio-variant" data-name="{{ value }}" />
                            
                            <label for="field-{{ value }}" class="radio__label">{{ value }}</label>
                          </div><!-- /.radio -->
                        </li>
                      {%- endfor -%}                      
                    </ul><!-- /.list-radios -->
                  </div><!-- /.form__controls -->
                </div><!-- /.form__row -->
              {%- endfor -%}

              <div class="form__row">
                <label for="field-qty" class="form__label">{{ 'product.form.quantity' | t }}</label>
                
                <div class="form__controls form__controls--alt">
                  <div class="qty">
                    <span class="qty__btn qty__btn--minus">-</span>
                    <input type="text" id="product-quantity" name="quantity" value="1" min="1" class="qty__field">
                    <span class="qty__btn qty__btn--plus">+</span>
                  </div><!-- /.qty -->
                </div><!-- /.form__controls -->
              </div><!-- /.form__row -->
            </div><!-- /.form__body -->
            
            <button
               type="submit"
               name="add"
               class="form__btn ProductForm__AddToCart"
               data-action="add-to-cart"
               
               data-add="{{- 'products.product.add_to_cart' | t -}}"
               data-disabled="{{- 'products.product.sold_out' | t -}}"

              {% unless _product.available %}
                disabled
              {% endunless %}
            >
              {{- 'product.form.add_to_cart' | t -}}
            </button>            

            <select name="id" id="product-select" class="select product-single__variants">
              {% for variant in product.variants %}
                <option
                  {% if _product.id == variant.id %}
                     selected
                  {% endif %}
                  
                   value="{{- variant.id -}}"
                   data-price="{{- variant.price | money -}}"
                   data-variantname="{{- variant.title -}}"

                  {% unless variant.available %}
                     disabled
                  {% endunless %}
                >
                  {{- variant.title -}}
                </option>
              {% endfor %}
            </select>
          {% endform %}
        </div><!-- /.product__form -->
        
        <div class="product__badges">
          <ul>
            <li>Safe For All Hair Types</li>
            <li>non-lather formula</li>
            <li>Satisfaction guarantee</li>
            <li>supporting water.org</li>
          </ul>
        </div><!-- /.product__badges -->
      </div><!-- /.product__body -->
    </div><!-- /.product__inner -->
  </div><!-- /.shell -->
</div><!-- /.product-primary -->

