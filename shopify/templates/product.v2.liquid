<style>
  
  .v2-reviews{
    padding-top: 30px;
    padding-bottom: 30px;
    text-align: center;
  }
  .v2-reviews header {
    margin-bottom: 20px;
  }
  span.spr-review-header-byline {
    margin: 0 auto;
    display: block;
    position: relative !important;
  }
  .spr-summary-actions-newreview {
    margin: 0 auto;
  }
  #shopify-product-reviews {
    margin: 0 auto !important;
  }
  @media screen and (max-width:768px){
    .fs-entry-container {
      display: none;
    }
    .fs-entry-container:first-of-type,
    .fs-entry-container:nth-of-type(2),
    .fs-entry-container:nth-of-type(3),
    .fs-entry-container:nth-of-type(4){
      display: block;
    }  
    
  }  
  
</style>

{% section 'product-template-v2' %}
{% section 'pr-section' %}

<div class="Container v2-reviews">
  <header class="SectionHeader--center">
    <h2 class="SectionHeader__Heading Heading u-h1">Reviews</h2>
  </header>
<div id="shopify-product-reviews" data-id="{{product.id}}">{{ product.metafields.spr.reviews }}</div>
</div>

<script>
  window.ShopifyXR=window.ShopifyXR||function(){(ShopifyXR.q=ShopifyXR.q||[]).push(arguments)};
  ShopifyXR('addModels', {{ product.media | where: 'media_type', 'model' | json }});
</script>

<script text="text/javascript">
  var _learnq = _learnq || [];

  var item = {
    Name: {{ product.title|json }},
    ProductID: {{ product.id|json }},
    Categories: {{ product.collections|map:'title'|json }},
    ImageURL: "https:{{ product.featured_image.src|img_url:'grande' }}",
    URL: "{{ shop.secure_url }}{{ product.url }}",
    Brand: {{ product.vendor|json }},
    Price: {{ product.price|money|json }},
    CompareAtPrice: {{ product.compare_at_price_max|money|json }}
  };

  _learnq.push(['track', 'Viewed Product', item]);
  _learnq.push(['trackViewedItem', {
    Title: item.Name,
    ItemId: item.ProductID,
    Categories: item.Categories,
    ImageUrl: item.ImageURL,
    Url: item.URL,
    Metadata: {
      Brand: item.Brand,
      Price: item.Price,
      CompareAtPrice: item.CompareAtPrice
    }
  }]);
</script>

