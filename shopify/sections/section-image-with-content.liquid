{%- comment -%} Settings {%- endcomment -%}
{%- assign _section = section.settings -%}
{%- assign background_color = _section.background_color -%}
{%- assign background_image = _section.background_image -%}
{%- assign content_position = _section.content_position -%}
{%- assign heading = _section.heading -%}
{%- assign subheading = _section.subheading -%}
{%- assign content = _section.content -%}

<div class="section__inner section__inner--{{ content_position }} " style="background-color: {{ background_color }};">
	{%- comment -%} Bakcground image {%- endcomment -%}
	{%- if background_image != blank -%}
		<div class="section__image" style="background-image: url('{{ background_image | img_url: '551x' }}');" ></div><!-- /.section__image -->
	{%- endif -%}

	{%- comment -%} Text with image {%- endcomment -%}
	{%- if heading != blank or subheading != blank -%}
		<div class="section__head {% if background_image == blank %} section__head--center {% endif %}">
			{%- if heading != blank -%}
				<h2 class="section__title">{{- heading -}}</h2>
			{%- endif -%}

			{%- if subheading != blank -%}
				<p>{{- subheading -}}</p>
			{%- endif -%}
		</div><!-- /.section__head -->
	{%- endif -%}
</div><!-- /.section__inner -->

{%- comment -%} Text at bottom {%- endcomment -%}
{%- if content != blank -%}
	<div class="section__body">
		<div class="shell">
			{{- content -}}
		</div><!-- /.shell -->
	</div><!-- /.section__body -->
{%- endif -%}


{% schema %}
{
	"name": "Image with content",
	"class": "section-image-with-content",
	"tag": "section",
	"settings": [
		{
			"type": "header",
			"content": "Background"
		},
		{
			"type": "color",
			"id": "background_color",
			"label": "Color",
			"default": "#99b9ae"
		},
		{
			"type": "image_picker",
			"id": "background_image",
			"label": "Image"
		},
		{
			"type": "header",
			"content": "Layout"
		},
		{
			"type": "select",
			"id": "content_position",
			"label": "Content position",
			"options": [
				{
					"value": "left",
					"label": "Left"
				},
				{
					"value": "right",
					"label": "Right"
				}
			],
			"default": "right"
		},
		{
			"type": "header",
			"content": "Content"
		},
		{
			"type": "text",
			"id": "heading",
			"label": "Heading text"
		},
		{
			"type": "text",
			"id": "subheading",
			"label": "Sub heading text"
		},
		{
			"type": "richtext",
			"id": "content",
			"label": "Text bellow image"
		}
	],
	"presets": [
		{
			"name": "Image with content",
			"category": "text"
		}
	]
}
{% endschema %}
